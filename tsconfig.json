{
    "compilerOptions": {
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "allowJs": true,
        "sourceMap": true,
        "lib": [
            "ES5",
            "ES6"
        ],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "**/__tests__/*.spec.ts"
    ]
}